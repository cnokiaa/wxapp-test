/*已逾期Overdue*/
.audit-failure,
.loan-failure,
.overdue {
	border-color: #fc2a2a;
}
.audit-failure span,
.loan-failure span,
.overdue span {
	background-color: #fc2a2a;
}
.audit-failure span:after,
.loan-failure span:after,
.overdue span:after {
	border-top: 0.12rem solid #c71c1c;
	border-right: 0.13rem solid #c71c1c;
}
/*已结案Case Closed*/
.case-closed {
	border-color: #007aff;
}
.case-closed span {
	background-color: #007aff;
}
.case-closed span:after {
	border-top: 0.12rem solid #005abb;
	border-right: 0.13rem solid #005abb;
}
/*补充资料*/
.sup-inf {
	display: block;
	width: 93.75%;
	height: 1.75rem;
	margin: 1.5rem auto;
	background-color: #03a7e4;
	color: #fff;
	font-size: 0.7rem;
	line-height: 1.75rem;
	text-align: center;
	-webkit-border-radius: 5px;
	-moz-border-radius: 5px;
	-ms-border-radius: 5px;
	-o-border-radius: 5px;
	border-radius: 5px;
	-webkit-box-shadow: none;
	-moz-box-shadow: none;
	-ms-box-shadow: none;
	-o-box-shadow: none;
	box-shadow: none;
}