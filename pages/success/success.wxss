.success {
	margin-bottom: 0.72rem;
	padding: 0.55rem 11.25%;
	border-bottom: 1px solid #e2e2e6;
	background-color: #fff;
	display: block;
}
.clearfix{overflow: hidden;}
.success-header em,
.success-tip em {
	float: left;
	width: 1rem;
	height: 1rem;
	background: url("../images/right.png") no-repeat center center;
	-webkit-background-size: 100%;
	-moz-background-size: 100%;
	-ms-background-size: 100%;
	-o-background-size: 100%;
	background-size: 100%;
}
.success-header strong,
.success-tip strong {
	float: left;
	padding-left: 0.4rem;
	color: #3c3c3c;
	font: normal 0.65rem/1rem "Microsoft YaHei";
}
.bar {
	width: 1rem;
	height: 2.5rem;
}
.bar-line {
	width: 0;
	height: 2.5rem;
	margin: 0 auto;
	border-left: 1px dashed #007aff;
	border-right: 1px dashed #007aff;
}
.success-tip p {
	float: left;
	padding-left: 1.4rem;
	color: #828282;
	font: normal 0.5rem/0.8rem "Microsoft YaHei";
}
.complete {
	display: block;
	width: 93.75%;
	height: 2rem;
	background-color: #fe7011;
	color: #fff;
	font: normal 0.8rem/2rem "Microsoft YaHei";
	text-align: center;
	-webkit-border-radius: 0.25rem;
	-moz-border-radius: 0.25rem;
	-ms-border-radius: 0.25rem;
	-o-border-radius: 0.25rem;
	border-radius: 0.25rem;
	-webkit-box-shadow: 0 1px 0 0 #b6b6ba;
	-moz-box-shadow: 0 1px 0 0 #b6b6ba;
	-ms-box-shadow: 0 1px 0 0 #b6b6ba;
	-o-box-shadow: 0 1px 0 0 #b6b6ba;
	box-shadow: 0 1px 0 0 #b6b6ba;
}
.lkl-app,
.lkl-app img {
	display: block;
	width: 100%;
}
.lkl-app {
	margin-bottom: 0.75rem;
}
/*竖屏*/
@media (orientation: portrait) {
	.complete {
		position: fixed;
		margin: 0 auto;
		left: 0;
		right: 0;
		bottom: 0.75rem;
	}
}
/*横屏*/
@media (orientation: landscape) {
	.complete {
		margin: 0 auto 0.75rem;
	}
	.recommend {
		margin-bottom: 0.72rem;
	}
}